@model IEnumerable<AllWorkoutsServiceModel>

@{
    ViewData["Title"] = "All Workouts";
}

<div class="cards">
    @foreach (var workout in Model)
    {
        <div class="card" style="width: 30rem;">
            <img src="@(workout.ImageUrl != null ? workout.ImageUrl 
                : "https://www.creativefabrica.com/wp-content/uploads/2021/04/19/Dumbbell-Gym-Sport-Icon-Neon-Graphics-11090991-1.jpg")" class="card-img-top"/>
            <div class="card-body">
                <h5 class="card-title">@workout.Name</h5>
                <p class="card-text">@workout.Creator</p>
                <p class="card-text">@workout.Description</p>
                <p class="card-text">Work days: @workout.TotalWorkDays</p>
                <a href="/Workouts/Details/@workout.Id" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>
