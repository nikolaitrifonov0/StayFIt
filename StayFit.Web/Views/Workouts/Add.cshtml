@model AddWorkoutViewModel

<form>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Your workout's name">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="WorkoutCycleType"></label>
        <select asp-for="WorkoutCycleType" class="form-control">
            <option value="0">By Week</option>
            <option value="1">Every Nth Day</option>
        </select>
    </div>

    <div class="form-group weekly-workdays text-center">
        <div class="day-of-week">
            <h1>Monday</h1>
            <div class="exercises col col-9"></div>
            <input class="find-exercise" type="search" placeholder="Exercises you want ot add." />
            <ul class="results"></ul>            
        </div>
        <div class="day-of-week">
            <h1>Tuesday</h1>
            <div class="exercises col col-9"></div>
            <input class="find-exercise" type="search" placeholder="Exercises you want ot add."  />
            <ul class="results"></ul>            
        </div>
        <div class="day-of-week">
            <h1>Wednesday</h1>
            <div class="exercises col col-9"></div>
            <input class="find-exercise" type="search" placeholder="Exercises you want ot add."  />
            <ul class="results"></ul>
        </div>
        <div class="day-of-week">
            <h1>Thursday</h1>
            <div class="exercises col col-9"></div>
            <input class="find-exercise" type="search" placeholder="Exercises you want ot add."  />
            <ul class="results"></ul>
        </div>
        <div class="day-of-week">
            <h1>Friday</h1>
            <div class="exercises col col-9"></div>
            <input class="find-exercise" type="search" placeholder="Exercises you want ot add."  />
            <ul class="results"></ul>
        </div>
        <div class="day-of-week">
            <h1>Saturday</h1>
            <div class="exercises col col-9"></div>
            <input class="find-exercise" type="search" placeholder="Exercises you want ot add."  />
            <ul class="results"></ul>
        </div>
        <div class="day-of-week">
            <h1>Sunday</h1>
            <div class="exercises col col-9"></div>
            <input class="find-exercise" type="search" placeholder="Exercises you want ot add."  />
            <ul class="results"></ul>
        </div>
    </div>

    <div class="form-group nth-day text-center" hidden="hidden" placeholder="Exercises you want ot add." >
        <h1>Day 1</h1>
        <div class="exercises col col-9"></div>
        <input class="find-exercise" type="search" placeholder="Exercises you want ot add."  />
        <ul class="results"></ul>
        <div class="row justify-content-center">
            <button class="add-day alert-success">Add Day</button>
        </div>
    </div>
</form>